apiVersion: v1
kind: Service
metadata:
  name: k8s-poc-sfdemo
spec:
  selector:
    app: k8s-poc-sfdemo
  ports:
    - port: 8080
      targetPort: 3000
  type: LoadBalancer
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: k8s-poc-sfdemo
spec:
  replicas: 1
  selector:
    matchLabels:
      app: k8s-poc-sfdemo
  template:
    metadata:
      labels:
        app: k8s-poc-sfdemo
    spec:
      containers:
        - name: k8s-poc-sfdemo
          image: k8s-poc-sfdemo
          ports:
            - containerPort: 3000
          imagePullPolicy: Always